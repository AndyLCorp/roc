{
  "private": "true",
  "scripts": {
    "start": "node ./scripts2/start.js",
    "build": "node ./scripts/build.js",
    "build:watch": "node ./scripts/watch.js",
    "clean": "rimraf esdocs coverage packages/*/lib",
    "rnm": "rimraf packages/*/node_modules",
    "lint": "eslint .",
    "bootstrap": "lerna bootstrap",
    "test": "npm run lint && npm run test:coverage",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha --compilers js:babel-register packages/**/tests --recursive",
    "test:unit": "cross-env NODE_ENV=test mocha --compilers js:babel-register packages/**/tests --recursive",
    "test:unit:watch": "npm run test:unit -- --watch",
    "docs": "node scripts/generate-documentation.js",
    "esdocs": "esdoc -c esdoc.json",
    "prepublish": "npm run clean && npm run build && npm test"
  },
  "repository": "https://github.com/rocjs/roc",
  "devDependencies": {
    "babel-cli": "~6.18.0",
    "babel-eslint": "~7.1.1",
    "babel-plugin-istanbul": "~3.0.0",
    "babel-plugin-transform-async-to-generator": "~6.16.0",
    "babel-plugin-transform-es2015-destructuring": "~6.19.0",
    "babel-plugin-transform-es2015-function-name": "~6.9.0",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.18.0",
    "babel-plugin-transform-es2015-parameters": "~6.18.0",
    "babel-plugin-transform-es2015-spread": "~6.8.0",
    "babel-plugin-transform-es2015-sticky-regex": "~6.8.0",
    "babel-plugin-transform-es2015-unicode-regex": "~6.11.0",
    "babel-plugin-transform-export-extensions": "~6.5.0",
    "babel-plugin-transform-object-rest-spread": "~6.19.0",
    "babel-register": "~6.18.0",
    "codeclimate-test-reporter": "~0.4.0",
    "coveralls": "~2.11.6",
    "cross-env": "~3.1.3",
    "eol": "~0.4.0",
    "esdoc": "~0.4.3",
    "esdoc-es7-plugin": "~0.0.3",
    "esdoc-importpath-plugin": "~0.0.1",
    "eslint": "~3.10.2",
    "eslint-config-airbnb-base": "~10.0.0",
    "eslint-plugin-babel": "~4.0.0",
    "eslint-plugin-import": "~2.2.0",
    "expect": "~1.20.2",
    "mocha": "~3.1.2",
    "nyc": "~10.0.0",
    "proxyquire": "1.7.10",
    "rimraf": "~2.5.0",
    "spawn-command": "~0.0.2-1"
  },
  "nyc": {
    "include": [
      "packages/**/src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
