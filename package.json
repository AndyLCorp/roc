{
  "name": "roc-config",
  "version": "1.0.0-alpha5",
  "description": "Configuration manager for the Roc ecosystem",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src --out-dir lib --source-maps",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf lib docs",
    "lint": "eslint .",
    "test:unit": "mocha --compilers js:babel/register",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test": "npm run lint && npm run test:unit",
    "check": "ncu",
    "docs": "esdoc -c esdoc.json",
    "prepublish": "npm test && npm run clean && npm run build && npm run docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vgno/roc-config.git"
  },
  "keywords": [
    "roc"
  ],
  "author": "VG",
  "license": "MIT",
  "devDependencies": {
    "babel": "~5.8.34",
    "babel-eslint": "~4.1.5",
    "chai": "~3.4.1",
    "esdoc": "~0.4.3",
    "esdoc-es7-plugin": "0.0.3",
    "esdoc-importpath-plugin": "0.0.1",
    "eslint": "~1.9.0",
    "eslint-config-vgno": "~5.0.0",
    "mocha": "~2.3.4",
    "npm-check-updates": "~2.3.0",
    "rimraf": "~2.4.3"
  },
  "dependencies": {
    "colors": "~1.1.2",
    "deep-extend": "~0.4.0",
    "lodash": "~3.10.1",
    "source-map-support": "~0.3.3"
  }
}
